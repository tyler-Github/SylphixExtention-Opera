{
    "name": "Sylphix Search Extension",
    "description": "A Chrome extension that uses Sylphix search engine",
    "version": "1.01.1",
    "manifest_version": 2,
    "icons": {
      "16": "Favicon/favicon-16x16.png",
      "32": "Favicon/favicon-32x32.png"
    },
    "permissions": ["tabs", "activeTab", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_title": "Sylphix Search",
      "default_icon": {
        "16": "Favicon/favicon-16x16.png",
        "32": "Favicon/favicon-32x32.png"
      },
      "default_popup": "index.html",
      "default_popup_width": 800,
      "default_popup_height": 500
    }
  }
  